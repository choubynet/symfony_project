{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container">
    <form method="post" action="{{path('security_login')}}" class="form-signin">

        <h1 class="h3 mb-3 font-weight-normal">Veuillez vous connecter</h1>
        <label for="inputEmail" class="sr-only">Email</label>
        <input type="email" name="_username" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
        <br>
        <label for="inputPassword" class="sr-only">Mot de passe</label>
        <input type="password" name="_password" id="inputPassword" class="form-control" placeholder="Password" required>

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >
        <br>
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Rester connecté
            </label>
        </div>
        
        <button class="btn btn-lg btn-primary" type="submit">
            Se connecter
        </button>
    </form>
<br>
<button type="button" class="btn btn-info btn-block">
    <a href="/inscription">Nouveau sur notre site ? Cliquez ici pour créer un compte !</a>  
</button>

</div>
{% endblock %}